---
import type { OwnedGamesResponse } from "@/features/steam/api";
import { STEAM } from "@/features/steam/constants";
import { processGames } from "@/features/steam/service";

export interface Props {
	data: OwnedGamesResponse;
}

const { data } = Astro.props;

// Validate props
if (!data?.games) {
	throw new Error("Steam data is missing or invalid");
}

// Process games using service layer
const games = processGames(data.games).slice(0, 12);
