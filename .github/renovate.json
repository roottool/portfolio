{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:daily"],
  "schedule": ["before 3am every weekday", "before 3am on sunday"],
  "labels": ["dependencies"],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 4,
  "prConcurrentLimit": 10,
  "configMigration": true,
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "semanticCommitScope": "",
  "branchPrefix": "renovate/",
  "branchConcurrentLimit": 10,
  "commitMessagePrefix": "deps:",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",
  "rebaseWhen": "conflicted",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on the first day of the month"],
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "all non-major devDependencies",
      "groupSlug": "all-devDependencies-minor-patch",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "managerFilePatterns": [
        "/(^|/)bun\\.lockb?$/",
        "/(^|/)package\\.json$/",
        "/(^|/)pnpm-lock\\.yaml$/"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-dependencies-minor-patch",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "managerFilePatterns": [
        "/(^|/)bun\\.lockb?$/",
        "/(^|/)package\\.json$/",
        "/(^|/)pnpm-lock\\.yaml$/"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "Major Updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "managerFilePatterns": [
        "/(^|/)bun\\.lockb?$/",
        "/(^|/)package\\.json$/",
        "/(^|/)pnpm-lock\\.yaml$/"
      ],
      "minimumReleaseAge": "7 days",
      "prPriority": 5
    },
    {
      "groupName": "GitHub Action digests",
      "matchDepTypes": ["action"],
      "pinDigests": true,
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "Common GitHub Action digests",
      "matchPackageNames": ["actions/*", "github/*"],
      "matchDepTypes": ["action"],
      "pinDigests": true,
      "automerge": true
    },
    {
      "groupName": "ESLint and Prettier",
      "matchPackageNames": [
        "eslint",
        "prettier",
        "@eslint/*",
        "eslint-*",
        "prettier-*",
        "typescript-eslint"
      ],
      "automerge": true,
      "managerFilePatterns": [
        "/(^|/)bun\\.lockb?$/",
        "/(^|/)package\\.json$/",
        "/(^|/)pnpm-lock\\.yaml$/"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "Type definitions Group",
      "automerge": true,
      "matchPackageNames": ["@types/{/,}**"],
      "managerFilePatterns": [
        "/(^|/)bun\\.lockb?$/",
        "/(^|/)package\\.json$/",
        "/(^|/)pnpm-lock\\.yaml$/"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "Astro Group",
      "matchPackageNames": ["astro", "@astrojs/*"],
      "managerFilePatterns": [
        "/(^|/)bun\\.lockb?$/",
        "/(^|/)package\\.json$/",
        "/(^|/)pnpm-lock\\.yaml$/"
      ],
      "automerge": true
    },
    {
      "groupName": "Node.js Version Constraint",
      "matchPackageNames": ["node"],
      "matchUpdateTypes": ["major"],
      "enabled": false,
      "description": "Disable Node.js major version updates",
      "minimumReleaseAge": "3 days"
    }
  ]
}
