{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "schedule:daily"],
	"schedule": ["before 3am every weekday", "before 3am on sunday"],
	"labels": ["dependencies"],
	"timezone": "Asia/Tokyo",
	"prHourlyLimit": 4,
	"prConcurrentLimit": 10,
	"configMigration": true,
	"semanticCommits": "enabled",
	"semanticCommitType": "deps",
	"semanticCommitScope": "",
	"branchPrefix": "renovate/",
	"branchConcurrentLimit": 10,
	"commitMessagePrefix": "deps:",
	"commitMessageTopic": "{{depName}}",
	"commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",
	"rebaseWhen": "conflicted",
	"vulnerabilityAlerts": {
		"enabled": true,
		"labels": ["security"],
		"automerge": true
	},
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["before 3am on the first day of the month"],
		"automerge": true
	},
	"customManagers": [
		{
			"description": "Update dprint plugin versions in dprint.json",
			"customType": "regex",
			"managerFilePatterns": ["/^dprint\\.json$/"],
			"matchStrings": [
				"https://plugins\\.dprint\\.dev/(?<depName>[^/]+)-v?(?<currentValue>[\\d.]+)\\.wasm"
			],
			"datasourceTemplate": "github-releases",
			"depNameTemplate": "dprint/dprint-plugin-{{{depName}}}",
			"extractVersionTemplate": "^v?(?<version>.+)$"
		},
		{
			"description": "Update g-plane dprint plugins in dprint.json",
			"customType": "regex",
			"managerFilePatterns": ["/^dprint\\.json$/"],
			"matchStrings": [
				"https://plugins\\.dprint\\.dev/g-plane/(?<depName>[^-]+)-v(?<currentValue>[\\d.]+)\\.wasm"
			],
			"datasourceTemplate": "github-releases",
			"depNameTemplate": "g-plane/{{{depName}}}",
			"extractVersionTemplate": "^v?(?<version>.+)$"
		}
	],
	"packageRules": [
		{
			"groupName": "all non-major devDependencies",
			"groupSlug": "all-devDependencies-minor-patch",
			"matchDepTypes": ["devDependencies"],
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true,
			"automergeType": "pr",
			"minimumReleaseAge": "3 days"
		},
		{
			"groupName": "all non-major dependencies",
			"groupSlug": "all-dependencies-minor-patch",
			"matchDepTypes": ["dependencies"],
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true,
			"automergeType": "pr",
			"minimumReleaseAge": "3 days"
		},
		{
			"groupName": "Major Updates",
			"matchUpdateTypes": ["major"],
			"automerge": false,
			"minimumReleaseAge": "7 days",
			"prPriority": 5
		},
		{
			"groupName": "GitHub Action digests",
			"matchDepTypes": ["action"],
			"pinDigests": true,
			"automerge": true,
			"minimumReleaseAge": "3 days"
		},
		{
			"groupName": "Common GitHub Action digests",
			"matchPackageNames": ["actions/*", "github/*"],
			"matchDepTypes": ["action"],
			"pinDigests": true,
			"automerge": true
		},
		{
			"groupName": "ESLint and dprint",
			"matchPackageNames": ["eslint", "dprint", "@eslint/*", "eslint-*", "typescript-eslint"],
			"automerge": true,
			"minimumReleaseAge": "3 days"
		},
		{
			"groupName": "dprint WASM plugins",
			"matchManagers": ["custom.regex"],
			"matchPackageNames": [
				"dprint/dprint-plugin-typescript",
				"dprint/dprint-plugin-json",
				"dprint/dprint-plugin-markdown",
				"g-plane/malva",
				"g-plane/markup_fmt",
				"g-plane/pretty_yaml"
			],
			"automerge": true,
			"minimumReleaseAge": "3 days"
		},
		{
			"groupName": "Type definitions Group",
			"automerge": true,
			"matchPackageNames": ["@types/{/,}**"],
			"minimumReleaseAge": "3 days"
		},
		{
			"groupName": "Astro Group",
			"matchPackageNames": ["astro", "@astrojs/*"],
			"automerge": true
		},
		{
			"groupName": "Node.js Version Constraint",
			"matchPackageNames": ["node"],
			"matchUpdateTypes": ["major"],
			"enabled": false,
			"description": "Disable Node.js major version updates",
			"minimumReleaseAge": "3 days"
		}
	]
}
